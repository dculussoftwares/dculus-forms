{
  "name": "@dculus/types",
  "version": "1.0.0",
  "description": "Shared types for Dculus Forms",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json && find dist-cjs -name '*.js' -exec sh -c 'mv \"$1\" \"${1%.js}.cjs\"' _ {} \\; && node fix-cjs-imports.cjs",
    "clean": "rm -rf dist dist-cjs",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "react-hook-form": "7.62.0",
    "zod": "^3.22.0"
  }
}