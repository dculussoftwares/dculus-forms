{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@dculus/utils": ["../../packages/utils/src"],
      "@dculus/utils/*": ["../../packages/utils/src/*"],
      "@dculus/types": ["../../packages/types/src"],
      "@dculus/types/*": ["../../packages/types/src/*"]
    }
  },
  "include": ["src/**/*", "../../packages/utils/src/**/*", "../../packages/types/src/**/*"],
  "exclude": ["dist", "node_modules"]
} 