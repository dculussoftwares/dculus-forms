{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express.js + GraphQL backend for Dculus Forms",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:migrate-layout": "tsx src/scripts/migrate-form-layout.ts",
    "db:migrate-bg-images": "tsx src/scripts/migrate-background-images.ts",
    "auth:generate": "pnpm dlx @better-auth/cli generate",
    "admin:setup": "tsx src/scripts/setup-admin.ts",
    "dev:coverage": "tsx watch src/index.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@aws-sdk/client-s3": "3.859.0",
    "@aws-sdk/s3-request-presigner": "3.872.0",
    "@dculus/types": "workspace:*",
    "@dculus/utils": "workspace:*",
    "@hocuspocus/extension-database": "^3.2.3",
    "@hocuspocus/server": "^3.2.3",
    "@prisma/client": "6.13.0",
    "@types/bcryptjs": "3.0.0",
    "@types/graphql-upload": "17.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/multer": "2.0.0",
    "@types/ws": "8.18.1",
    "bcryptjs": "3.0.2",
    "better-auth": "1.3.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "countries-and-timezones": "3.8.0",
    "dotenv": "17.2.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tag": "2.12.6",
    "graphql-type-json": "0.3.2",
    "graphql-upload": "17.0.0",
    "helmet": "^7.1.0",
    "i18n-iso-countries": "7.14.0",
    "iso-3166-1-alpha-2": "1.0.2",
    "jsonwebtoken": "9.0.2",
    "lib0": "0.2.114",
    "mongodb": "6.18.0",
    "morgan": "^1.10.0",
    "multer": "2.0.2",
    "nanoid": "5.1.5",
    "nodemailer": "^6.9.8",
    "prisma": "6.13.0",
    "ws": "8.18.3",
    "xlsx": "0.18.5",
    "yjs": "13.6.27"
  },
  "devDependencies": {
    "@better-auth/cli": "1.3.4",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "esbuild": "^0.25.9",
    "eslint": "9.35.0",
    "nodemon": "^3.0.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
